
<style>
  .todo{
    height: 100%;
    width: 20%;
    position: fixed;
    z-index: 1;
    top: 0;
    right: 0;
    background-color: rgb(238, 238, 238);
    overflow-x: hidden;
  }

  .todo p {
    padding-left: 10px;
    text-decoration: none;
    font-size: 18px;
    color: #363636;
    display: block;
  }
</style>


<header class="header">Modules</header>
<hr class="rule" style="width: 85%; ">

<div class="todo">
  <p style="font-size: 24px; margin-top: 10px; margin-left: 20px">To-do</p>
  <hr class="my-1" style="margin-left: 10px; margin-right: 10px; border-width: 1px; border-color: rgb(73, 73, 73)">
</div>

<div class="d-flex flex-wrap">
  {{#each modules}}
    <div class="card m-3" style="width: 18rem;">
      <img class="card-img-top" src="/img/cat.jpg" alt="Card image cap">
      <div class="card-body">
        <h5 class="card-title">{{this.ModuleName}}</h5>
        <a href="/Modules/{{this.moduleID}}" class="btn btn-primary">Go to Lessons</a>

      </div>
    </div>


  {{/each}}
</div>

<!--sidebar nav on this page-->
<script>
var x = document.getElementById("navbar");
x.style.display = "none";
var x = document.getElementById("menubtn");
x.style.display = "block";
</script>

</div>
